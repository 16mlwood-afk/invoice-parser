{
  "name": "amazon-invoice-parser",
  "version": "1.0.0",
  "description": "A Node.js utility to extract structured data from Amazon invoice PDFs. Companion tool for the Amazon Invoice Extractor Chrome extension.",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "jest --config config/jest.config.unit.js",
    "test:unit": "jest --config config/jest.config.unit.js",
    "test:integration": "jest --config config/jest.config.integration.js",
    "test:all": "jest --config config/jest.config.unit.js && jest --config config/jest.config.integration.js",
    "test:watch": "jest --config config/jest.config.unit.js --watch",
    "test:coverage": "jest --config config/jest.config.unit.js --coverage",
    "test:integration:coverage": "jest --config config/jest.config.integration.js --coverage",
    "test:pdfs": "node scripts/testing/test-real-pdfs.js",
    "test:old": "node test.js",
    "test:e2e": "jest --config config/jest.config.e2e.js --verbose",
    "test:e2e:watch": "jest --config config/jest.config.e2e.js --watch",
    "test:e2e:coverage": "jest --config config/jest.config.e2e.js --coverage",
    "test:e2e:report": "jest tests/e2e --json --outputFile=tests/e2e/reports/latest-run.json && node tests/e2e/generate-report.js",
    "start": "node index.js",
    "start:api": "node index.js --api",
    "start:web": "node index.js --web",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "web:start": "cd web && npm run start",
    "web:test": "cd web && npm test",
    "web:test:watch": "cd web && npm run test:watch",
    "web:test:coverage": "cd web && npm run test:coverage",
    "web:lint": "cd web && npm run lint",
    "web:lint:fix": "cd web && npm run lint:fix",
    "web:install": "cd web && npm install",
    "lint": "eslint index.js scripts/*.js",
    "build": "echo 'No build process required'",
    "bmad:refresh": "echo 'Use: bmad install -f -i opencode'",
    "bmad:list": "echo 'Use: bmad status'",
    "bmad:validate": "echo 'Use: bmad status && echo Configuration validated'"
  },
  "keywords": [
    "amazon",
    "invoice",
    "parser",
    "pdf",
    "extractor",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "bmad-method": "^4.44.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.9.2",
    "multer": "^2.0.2",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "winston": "^3.8.2"
  },
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.6.1",
    "supertest": "^7.1.4"
  }
}
